    <title>Book Store</title>
</head>

<body>

    <nav class="navbar sticky-top navbar-toggleable-md navbar-light bg-faded">
        <div class="container">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="/">
                <img src="/public/images/book-store-logo.png" width="40" height="40" class="d-inline-block align-middle book-store-logo" alt="Book store logo">
                <span>  Book Store</span>
            </a>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mr-auto mt-2 mt-md-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">BOOKS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">ABOUT</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto mt-2 mt-md-0">
                    <li class="nav-item search-nav">
                        <a class="nav-link" href="#">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </a>
                    </li>
                    <li class="nav-item login-nav" id="login-nav">
                        <a class="nav-link" href="#" data-toggle="modal" data-target="#login-modal-form"><i class="fa fa-user" aria-hidden="true"></i><span> LOGIN</span></a>
                    </li>
                    <li class="nav-item login-nav hidden" id="logout-nav">
                        <a class="nav-link" href="#"><i class="fa fa-user" aria-hidden="true"></i><span> LOGOUT</span></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="image-container">
        <img id="main-image" class="home-main-image" src="/public/images/Bookstore4.jpg"/>
    </div>

    <div class="modal fade" id="login-modal-form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-login">
                    <form class="form-horizontal">
                            <h1>Login</h1>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <input id="tb-username" class="form-control input-login" type="text" placeholder="Username">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <input id="tb-password" class="form-control input-login" type="password" placeholder="Password">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    <button id="btn-login" class="btn btn-success btn-login">Login</button>
                                    <button id="btn-register" class="btn btn-success btn-register">Register</button>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>

    <div class="container">
        <div id="page-placeholder"></div>
    </div>

    <script src="/public/scripts/utils/http.js"></script>
    <script src="/public/scripts/data/books-data.js"></script>
    <script src="/public/scripts/data/users-data.js"></script>
    <script src="/public/scripts/utils/templates.js"></script>

    <script src="/public/scripts/controllers/home.js"></script>   

    <script src="/public/app.js"></script>
